#include <stdio.h>

void smooth(char p[64][64])
{
	for(int i=1;i<63;i++) {
		for(int j=1;j<63;j++) {
		
			if (p[i  ][j+1]==1 && p[i  ][j-1]==1 && p[i+1][j  ]==1 && p[i-1][j  ]==1 &&
				p[i+1][j+1]==0 && p[i-1][j-1]==1 && p[i+1][j-1]==1 && p[i-1][j+1]==0) {
				p[i+1][j]=0;
			}
			if (p[i  ][j+1]==1 && p[i  ][j-1]==1 && p[i+1][j  ]==1 && p[i-1][j  ]==1 &&
				p[i+1][j+1]==0 && p[i-1][j-1]==1 && p[i+1][j-1]==1 && p[i-1][j+1]==0) {
				p[i][j+1]=0;
			}
			if (p[i  ][j+1]==1 && p[i  ][j-1]==1 && p[i+1][j  ]==1 && p[i-1][j  ]==1 &&
				p[i+1][j+1]==1 && p[i-1][j-1]==0 && p[i+1][j-1]==1 && p[i-1][j+1]==0) {
				p[i-1][j]=0;
			}
			if (p[i  ][j+1]==1 && p[i  ][j-1]==1 && p[i+1][j  ]==1 && p[i-1][j  ]==1 &&
				p[i+1][j+1]==1 && p[i-1][j-1]==0 && p[i+1][j-1]==0 && p[i-1][j+1]==1) {
				p[i][j-1]=0;
			}
			
			if (p[i  ][j+1]==1 && p[i  ][j-1]==1 && p[i+1][j  ]==0 && p[i-1][j  ]==1 &&
				p[i+1][j+1]==1 && p[i-1][j-1]==1 && p[i+1][j-1]==1 && p[i-1][j+1]==1) {
				p[i+1][j]=2;
			}
			if (p[i  ][j+1]==0 && p[i  ][j-1]==1 && p[i+1][j  ]==1 && p[i-1][j  ]==1 &&
				p[i+1][j+1]==1 && p[i-1][j-1]==1 && p[i+1][j-1]==1 && p[i-1][j+1]==1) {
				p[i][j+1]=2;
			}
			if (p[i  ][j+1]==1 && p[i  ][j-1]==1 && p[i+1][j  ]==1 && p[i-1][j  ]==0 &&
				p[i+1][j+1]==1 && p[i-1][j-1]==1 && p[i+1][j-1]==1 && p[i-1][j+1]==1) {
				p[i-1][j]=2;
			}
			if (p[i  ][j+1]==1 && p[i  ][j-1]==0 && p[i+1][j  ]==1 && p[i-1][j  ]==1 &&
				p[i+1][j+1]==1 && p[i-1][j-1]==1 && p[i+1][j-1]==1 && p[i-1][j+1]==1) {
				p[i][j-1]=2;
			}
			
		}
	}
	
	for(int i=1;i<63;i++) {
		for(int j=1;j<63;j++) {
			if(p[i][j]==2) {
				p[i][j]=0;
			}
		}
	}
	
}

void expand(char data[512],char pattern[64][64])
{
	unsigned char mask;
	for(int y=0;y<64;y++) {
		for(int x=0;x<8;x++) {
			mask=0x80;
			for(int i=0;i<8;i++) {
				if((data[y*8+x]&mask)==0) {
					pattern[y][8*x+i]=0;
				}else{
					pattern[y][8*x+i]=1;
				}
				mask=mask>>1;
			}
		}
	}
	printf("\n");
}

int main()
{
	char data[512];
	char pattern[64][64]={0};
	FILE *fp;
	fp=fopen("01.img","rb");
	if (fp==NULL) {
		printf("can't open a file\n");
		exit(1);						/*緊急停止*/
	}
	fread(data,512,1,fp);
	printf("Before :\n");
	expand(data,pattern);
	for(int a=0;a<64;a++) {
		for(int b=0;b<64;b++) {
			printf("%d",pattern[a][b]);
		}
		printf("\n");
	}
	printf("After :\n");
	smooth(pattern);
	for(int a=0;a<64;a++) {
		for(int b=0;b<64;b++) {
			printf("%d",pattern[a][b]);
		}
		printf("\n");
	}
	fclose(fp);
	return 0;
}
